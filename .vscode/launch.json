    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/out/src/cli.js",
            "args": [
              "all"
            ],
            "preLaunchTask": "tsc: build - tsconfig.dev.json",
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        }
    ]
}
